# Environment Configuration for Predictive Maintenance System

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/predictive_maintenance
POSTGRES_DB=predictive_maintenance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_SERVERS=localhost:9092
KAFKA_TOPIC=sensor_data
KAFKA_GROUP_ID=sensor_processor

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Model Configuration
MODEL_PATH=./models
LSTM_SEQUENCE_LENGTH=24
LSTM_PREDICTION_HORIZON=6
ARIMA_MAX_P=5
ARIMA_MAX_D=2
ARIMA_MAX_Q=5

# Training Configuration
NUM_EQUIPMENT=20
DURATION_DAYS=60
USE_EXISTING_DATA=false
RETRAIN_THRESHOLD=1000

# Pipeline Configuration
SIMULATE_DATA=true
SIMULATION_INTERVAL=15
PREDICTION_CALLBACK_ENABLED=true

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/

# Security Configuration (for production)
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
CORS_ORIGINS=*

# Performance Configuration
MAX_WORKERS=4
CACHE_TTL=300
BATCH_SIZE=32
MAX_MEMORY_USAGE=4GB
